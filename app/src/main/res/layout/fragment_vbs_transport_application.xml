<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.VbsTransportApplication"
    android:background="@color/colorPrimaryDark">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="55dp"
            android:background="@color/colorPrimaryDark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <Spinner
                    android:id="@+id/transportProgramIdSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="15sp">

                </Spinner>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:visibility="gone"
                    android:id="@+id/addlayoutImageTransport">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add TransPort Details"
                        android:layout_margin="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark" />

                    <ImageButton
                        android:id="@+id/VbsTransportLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/ic_input_add"
                        android:background="@color/white"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="150dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dynamicVbsTransport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="10dp">
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
        <Button
            android:id="@+id/submitVbsTransportApplication"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="15sp"
            android:layout_marginEnd="20dp"
            android:text="Submit"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_gravity="bottom|end"
            android:background="@drawable/solid_background_primary" />

        <Button
            android:id="@+id/VbsTransportAddMoreVendorDetails"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="15sp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp"
            android:text="Add more"
            android:textColor="@color/colorPrimaryDark"
            android:textAllCaps="false"
            android:layout_gravity="bottom"
            android:background="@drawable/stroke_background_gray" />
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>