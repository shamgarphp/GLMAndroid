<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragments.SuccessStories">

        <!-- TODO: Update blank fragment layout -->

        <LinearLayout
            android:id="@+id/SuccessStoriesSpinnerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_margin="15sp">
            <Spinner
                android:id="@+id/SuccessStories_spinner_program_id"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            </Spinner>

        </LinearLayout>


        <EditText
            android:id="@+id/SuccessStories_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SuccessStoriesSpinnerLayout"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:background="@color/white"
            android:hint="Enter Email/Username"
            android:textSize="14sp"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/SuccessStories_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SuccessStories_email"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:layout_marginTop="10dp"
            android:hint="Enter Phone number"
            android:textSize="14sp"
            android:padding="10dp"
            android:background="@color/white"/>

        <EditText
            android:id="@+id/edt_SuccessStories_description"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white"
            android:layout_below="@+id/SuccessStories_phone"
            android:layout_marginTop="10sp"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:hint="Type Your Success Story "
            android:paddingStart="15sp"
            android:paddingEnd="15sp"
            android:gravity="bottom"
            android:paddingBottom="10dp" />

        <LinearLayout
            android:id="@+id/SuccessStories_ImageLayout"
            android:layout_below="@+id/edt_SuccessStories_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="10sp"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp">
            <ImageView
                android:id="@+id/SuccessStoriesImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@+id/edt_SuccessStories_description"
                android:layout_margin="8dp"
                android:src="@drawable/user"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/SuccessStoriesUploadButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload"
                android:background="@drawable/stroke_background_gray"
                android:layout_below="@+id/edt_SuccessStories_description"
                android:layout_toRightOf="@+id/SuccessStoriesImage"
                android:layout_marginTop="80dp"
                android:paddingStart="18dp"
                android:paddingBottom="8dp"
                android:paddingEnd="18sp"
                android:paddingTop="8dp"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginStart="20dp"
                android:textStyle="bold"/>

        </LinearLayout>
        <Button
            android:id="@+id/btn_submit_SuccessStories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Story"
            android:textAllCaps="false"
            android:background="@drawable/white_round_background"
            android:layout_below="@+id/SuccessStories_ImageLayout"
            android:layout_margin="20dp"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</ScrollView>