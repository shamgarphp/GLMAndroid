<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.DayWiseReportFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment" >

        <TextView
            android:id="@+id/dailyWorkReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Daily work report"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"/>

       <Spinner
           android:id="@+id/daywise_report_spinnerWork"
           android:layout_width="200dp"
           android:layout_height="40dp"
           android:layout_margin="10dp"
           android:layout_below="@+id/dailyWorkReport"
           android:background="@drawable/stroke_background"
           android:paddingBottom="5dp">
       </Spinner>

        <TextView
            android:id="@+id/daywise_report_selectDate"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="Select Date"
            android:layout_toRightOf="@+id/daywise_report_spinnerWork"
            android:layout_margin="15dp"
            android:textStyle="bold"
            android:background="@drawable/stroke_background"
            android:gravity="center"
            android:layout_below="@+id/dailyWorkReport"
            android:padding="3dp"/>

        <TextView
            android:id="@+id/dayWise_peopleAttendence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="People Attendence"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:textSize="14sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_below="@+id/daywise_report_selectDate"/>

      <TextView
          android:id="@+id/peopleAttendence_men_heading"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/dayWise_peopleAttendence"
          android:text="Men :"
          android:layout_marginStart="20dp"
          android:textStyle="bold"
          android:layout_marginTop="2dp"
          android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/edt_dayWise_men_count"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/stroke_background"
            android:layout_toRightOf="@+id/peopleAttendence_men_heading"
            android:layout_below="@+id/dayWise_peopleAttendence"
            android:layout_marginStart="12dp"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:padding="5dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/peopleAttendence_women_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dayWise_peopleAttendence"
            android:text="Women:"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@+id/edt_dayWise_men_count"/>

        <EditText
            android:id="@+id/edt_dayWise_Women_count"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/stroke_background"
            android:layout_toRightOf="@+id/peopleAttendence_women_heading"
            android:layout_below="@+id/dayWise_peopleAttendence"
            android:layout_marginStart="10dp"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:padding="5dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/peopleAttendence_Boys_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/peopleAttendence_men_heading"
            android:text="Boys:"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/edt_dayWise_boys_count"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/stroke_background"
            android:layout_toRightOf="@+id/peopleAttendence_Boys_heading"
            android:layout_below="@+id/peopleAttendence_men_heading"
            android:layout_marginStart="12dp"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:textSize="16sp"/>


        <TextView
            android:id="@+id/peopleAttendence_Girls_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/peopleAttendence_men_heading"
            android:layout_toRightOf="@+id/edt_dayWise_boys_count"
            android:text="Girls:     "
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/edt_dayWise_girls_count"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/stroke_background"
            android:layout_toRightOf="@+id/peopleAttendence_Girls_heading"
            android:layout_below="@+id/peopleAttendence_men_heading"
            android:layout_marginStart="10dp"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txtPlaceOfWork_dayWise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/peopleAttendence_Boys_heading"
            android:layout_marginTop="35sp"
            android:layout_marginStart="5dp"
            android:text="Place of Work: "
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edt_dayWise_PlaceOfLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stroke_background"
            android:layout_toRightOf="@+id/txtPlaceOfWork_dayWise"
            android:layout_below="@+id/peopleAttendence_Boys_heading"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:padding="8dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txtWorkDoneInformation_dayWise"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPlaceOfWork_dayWise"
            android:layout_marginTop="35sp"
            android:layout_marginStart="5dp"
            android:text="Work Done Information:"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edt_dayWise_WorkDoneInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stroke_background"
            android:layout_toRightOf="@+id/txtWorkDoneInformation_dayWise"
            android:layout_below="@+id/txtPlaceOfWork_dayWise"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:layout_marginTop="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:padding="8dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txtPrayerPoints_dayWise"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtWorkDoneInformation_dayWise"
            android:layout_marginTop="35sp"
            android:layout_marginStart="5dp"
            android:text="Prayer Points:"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edt_dayWise_PrayerPoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stroke_background"
            android:layout_toRightOf="@+id/txtPrayerPoints_dayWise"
            android:layout_below="@+id/txtWorkDoneInformation_dayWise"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:padding="8dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txtAcheivements_dayWise"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPrayerPoints_dayWise"
            android:layout_marginTop="40sp"
            android:layout_marginStart="5dp"
            android:text="Achievements:"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edt_dayWise_Acheivements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stroke_background"
            android:layout_toRightOf="@+id/txtAcheivements_dayWise"
            android:layout_below="@+id/txtPrayerPoints_dayWise"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:layout_marginTop="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:padding="8dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txtChallenges_dayWise"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtAcheivements_dayWise"
            android:layout_marginTop="40sp"
            android:layout_marginStart="5dp"
            android:text="Challenges:"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edt_dayWise_Challenges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stroke_background"
            android:layout_toRightOf="@+id/txtChallenges_dayWise"
            android:layout_below="@+id/txtAcheivements_dayWise"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:layout_marginTop="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:padding="8dp"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/submitDailyReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/solid_background_primary"
            android:layout_below="@+id/txtChallenges_dayWise"
            android:layout_marginTop="50dp"
            android:text="Submit Report"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"/>

    </RelativeLayout>

</ScrollView>